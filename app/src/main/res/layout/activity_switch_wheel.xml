<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.switchwheel.SwitchWheelActivity">

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginBottom="5dp"
        android:background="#70b1e2"
        app:layout_constraintBottom_toTopOf="@id/switchWheelView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <net.archeryc.qiniushortvideodemo.ui.switchwheel.SwitchWheelView
        android:id="@+id/switchWheelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#476dc7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>